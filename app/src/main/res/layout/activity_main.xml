<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pranav.assignment1.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:onClick="increaseClickCount"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_textView"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/button_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/background_textView"
        android:layout_below="@+id/button_textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/background_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickCount"
        android:layout_above="@+id/background_textView"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgroundCount"
        android:layout_toEndOf="@+id/button"
        android:layout_marginStart="55dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/clickCount" />
</RelativeLayout>
